<form action="/movies/edit/<%= movie._id %>" method="POST" enctype="multipart/form-data">
    <input type="text" name="title" value="<%= movie.title %>" required>
    <textarea name="description"><%= movie.description %></textarea>
    <input type="date" name="releaseDate" value="<%= movie.releaseDate.toISOString().split('T')[0] %>" required>
    <input type="text" name="genre" value="<%= movie.genre %>" required>
    <input type="number" name="rating" value="<%= movie.rating %>" required>
    <input type="file" name="poster">
    <button type="submit">Update Movie</button>
</form> 